{
  "name": "svgpath",
  "version": "2.2.3",
  "description": "Low level toolkit for SVG paths transformations.",
  "keywords": [
    "svg",
    "path",
    "transform",
    "scale",
    "translate",
    "rotate",
    "matrix"
  ],
  "license": "MIT",
  "repository": "fontello/svgpath",
  "scripts": {
    "lint": "eslint .",
    "test": "npm run lint && mocha",
    "coverage": "rm -rf coverage && istanbul cover _mocha",
