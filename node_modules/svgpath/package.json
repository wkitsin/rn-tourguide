  },
  "files": [
    "index.js",
    "index.d.ts",
    "lib/"
  ],
  "devDependencies": {
    "ansi": "^0.3.1",
    "benchmark": "^2.1.1",
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "istanbul": "^0.4.5",
    "mocha": "^6.1.4"
  }
}
